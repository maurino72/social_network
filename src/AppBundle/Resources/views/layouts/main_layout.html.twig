<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        {% block title %}
        {% endblock %}
    </title>
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.cerulean.min.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}" type="text/css">
    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript">
            var URL = "{{ app.request.getSchemeAndHttpHost() }}/app_dev.php"
        </script>
        <script src="{{ asset('assets/js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</head>
<body>
    {#<header>#}
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapse" data-toggle="collapse" data-target="#bs-navbar-example-collapse-1" aria-expanded="false">
                        <span class="sr-only">Men√∫</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a href="{{ path('app_homepage') }}" class="navbar-brand">
                        <span class="glyphicon glyphicon-cloud" aria-expanded="false"></span>
                        Social Network
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="bs-navbar-example-collapse-1">
                    {% if app.user == null %}
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="{{ path('login') }}">
                                    <span class="glyphicon glyphicon-log-in"></span>
                                    &nbsp;
                                    Login
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('register') }}">
                                    <span class="glyphicon glyphicon-user"></span>
                                    &nbsp;
                                    Signup
                                </a>
                            </li>
                        </ul>
                    {% else %}
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <div class="avatar">
                                        {% if app.user.image == null %}
                                            <img src="{{ asset('uploads/users/default.png') }}" class="img-circle img-responsive">
                                        {% else %}
                                            <img src="{{ asset('uploads/users/'~app.user.image) }}" alt="{{ app.user.firstName }} {{ app.user.lastName }}" class="img-responsive img-circle">
                                        {% endif %}
                                    </div>
                                    {{ app.user.firstName }} {{ app.user.lastName }}
                                    <span class="caret"></span>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="">
                                                <span class="glyphicon glyphicon-user"></span>
                                                Profile
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('profile-settings') }}">
                                                <span class="glyphicon glyphicon-cog"></span>
                                                Account Settings
                                            </a>
                                        </li>
                                        <li role="separator" class="divider"></li>
                                        <li>
                                            <a href="{{ path('logout') }}">
                                                <span class="glyphicon glyphicon-log-out"></span>
                                                Logout
                                            </a>
                                        </li>
                                        <li role="separator" class="divider"></li>
                                        <li>
                                            <a href="">
                                                <span class="glyphicon glyphicon-exclamation-sign"></span>
                                                Help
                                            </a>
                                        </li>
                                    </ul>
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </nav>
    {#</header>#}
    <section id="content">
        <div class="container">
            <div class="col-lg-11">
                {% for message in app.session.flashbag().get('status') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="clearfix"></div>
        {% block content %}
        {% endblock %}
    </section>
    <footer class="col-lg-12">
        <hr>
        <div class="container">
            <p class="text-muted">Desarrollando una red social con symfony</p>
        </div>
    </footer>
</body>
</html>