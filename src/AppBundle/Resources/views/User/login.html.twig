{% extends 'AppBundle:layouts:main_layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="col-lg-4 login-box">
            <div class="panel panel-info box-form">
                <div class="panel-heading">
                    <h4 class="panel-title">Sign In</h4>
                </div>
                <div class="panel-body">
                    <form action="{{ path('login_check') }}" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="username" name="_username" value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password" name="_password">
                        </div>

                        <button type="submit" class="btn btn-info">Sign In</button>
                        <input type="hidden" name="_target_path" value="/home">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}